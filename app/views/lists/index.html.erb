<div class="page-container">

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div>
      <%= link_to "#", class: "navbar-brand" do %>
        <%= image_tag "logo.gif", alt: "Watch list", width: 200 %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse flex-row ml-md-auto d-none d-md-flex" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li>
          <%= link_to "Create a list", new_list_path, class:"btn btn-flat" %>
        </li>
      </ul>
    </div>
  </div>

  <div class=container>
    <div class="cards">
      <% @lists.each do |list| %>
        <%= link_to list.name, list_path(list), class:"card-category", style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('#{cl_image_path(list.photo.key)}');" %>
      <% end %>
    </div>
  </div>


  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      This footer is made with <i class="fas fa-heart"></i> at Le Wagon
    </div>
  </div>
</div>


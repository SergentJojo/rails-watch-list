<div class=container>
  <div class="cards">
    <% @lists.each do |list| %>
    <%= link_to list.name, list_path(list), class:"card-category", style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?#{list.name.split(" ").join("%20")})" %>

    <% end %>
  </div>
</div>
